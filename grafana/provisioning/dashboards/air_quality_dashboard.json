{
  "id": null,
  "uid": "air-quality",
  "title": "Air Quality Dashboard",
  "tags": ["air quality", "ETL", "Kafka", "Airflow"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 2,
  "refresh": "30s",
  "panels": [
    {
      "type": "stat",
      "title": "European AQI (Latest)",
      "datasource": "Postgres_AirQuality",
      "targets": [
        {
          "rawSql": "SELECT location, pm2_5 AS value, current_time AS time FROM public.air_quality WHERE current_time = (SELECT MAX(current_time) FROM public.air_quality)",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "orientation": "horizontal",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 50 },
              { "color": "red", "value": 100 }
            ]
          }
        }
      },
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 4 }
    },
